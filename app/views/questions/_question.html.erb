<article class="question">
  <h2>
    <%= link_to question.title, question_path(question) %>
  </h2>

  <ul class="meta">
    <li class="who">
      <%= render "shared/user", user: question.user %>

      <time datetime="<%= question.created_at.xmlschema %>">
        <%= t("question.created_at", time: time_ago_in_words(question.created_at)) %>
      </time>
    </li>

    <li class="views icon">
      <%= t("question.views_count_html", count: question.views_count) %>
    </li>

    <li class="answers icon">
      <%= t("question.answers_count_html", count: question.answers_count) %>
    </li>
  </ul>
</article>
